printf "your progress <status>:<workdone> = "
read progress
status= echo $progress | awk -F':' '{print $1}'
if [ x$status = x"0" ]
then 
	echo "Do some work..."
elif [ x$status = x"1" ]
then 
	echo "Put some more effort..."
else
	echo "Yayy! work done..."
fi
printf "New thing learned = "
read acquired

echo $progress > /home/von/.vondel
echo $acquired >> /home/von/.vondel
